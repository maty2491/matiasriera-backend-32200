head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
    title Productos con PUG
.container
    table.table.align-middle.mb-0.bg-white
        thead
            tr
                th Nombre
                th Precio
                th Imagen                    
            if products.length
                each product in products
                        tbody
                            td #{product.name}
                            td $ #{product.price}
                            td 
                                img(src=product.thumbnail style='width: 45px; height: 45px')
                            
            else
                h1 No hay productos cargados
        
    button#formButton.btn.btn-primary.mt-3 Volver a carga de productos
script.
    const formButton = document.getElementById('formButton')
    formButton.addEventListener('click', (e) => {
        window.location = "/pug"
    })                                        